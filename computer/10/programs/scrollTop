x = 1
y = 2
-- Prompt the user for the text to display on screen
--print("Please type the text you would like to display on the screen.")
--local text = read()
local text = "Owo"
mon = peripheral.wrap("monitor_0")
mon.clear()
mon.setCursorPos(x,y)
mon.setTextScale(4)
mon.setTextColor(colors.purple)
while true do
  xres, yres = mon.getSize()
  for x=xres+1, (string.len(text)*-1), -1 do
    mon.setCursorPos(x,y)
    mon.clear()
    mon.write(text)
    sleep(.1)
  end
end
