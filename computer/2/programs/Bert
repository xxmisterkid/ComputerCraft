x = -3
y = 1

for m,v in pairs(rs.getSides()) do
  if peripheral.getType(v) == "monitor" then
    mon = peripheral.wrap(v)
    mon.clear()
    mon.setCursorPos(x,y)
    mon.setTextScale(4)
    break
  end
end
xres, yres = mon.getSize()
while true do
  for x=-3, xres, 1 do
    mon.setCursorPos(x,y)
    mon.clear()
    mon.write("Bert")
    sleep(0.1)
  end
end
